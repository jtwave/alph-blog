<h1>Welcome to <%=@user.username%>'s Profile</h1>
<h3>Articles</h3>
<% @user.articles.each do |article| %>
    <tr>
        <td><%=article.title %></td>
        <td><%=article.description%></td>
        <td><%= link_to 'Delete', article_path(article.id), data: {turbo_confirm: "Are you sure?", turbo_method: :delete} %> </td>
        <td><%= link_to 'Show', article_path(article.id) %></td>
        <td><%= link_to 'Edit', edit_article_path(article.id)%></td>
    </tr>
<%end %>
<%= link_to 'home', root_path %>