<h1>Showing Listing Pages</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan = "3">Actions</th>
            <th>Author</th>
        </tr>
    </thead>

    
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%=article.title %></td>
                <td><%=article.description%></td>
                <td><%= link_to 'Delete', article_path(article.id), data: {turbo_confirm: "Are you sure?", turbo_method: :delete} %> </td>
                <td><%= link_to 'Show', article_path(article.id) %></td>
                <td><%= link_to 'Edit', edit_article_path(article.id)%></td>
                <td><%=article.user.username%></td>
            </tr>
        <%end %>
    </tbody>
</table>

<p>
    <%= link_to "Create new article", new_article_path %>
</p>    